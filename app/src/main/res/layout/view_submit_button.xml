<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/submit_form_field_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/bg_submit_button">

    <TextView
        android:id="@+id/submit_form_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAppearance="@style/SubmitButton"
        android:visibility="gone"
        tools:text="Submit"/>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/submit_form_field_progress"
        android:layout_width="@dimen/d6"
        android:layout_height="@dimen/d6"
        android:layout_gravity="center"
        android:visibility="gone"
        wheel:matProg_barColor="@color/white"
        wheel:matProg_barWidth="2dp"
        wheel:matProg_progressIndeterminate="true"/>

    <ImageView
        android:id="@+id/submit_form_field_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_check"/>

</FrameLayout>
