<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d2"
    android:layout_marginRight="@dimen/d2"
    android:background="@drawable/bg_selected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d2"
        android:layout_marginTop="@dimen/d2"
        android:layout_marginRight="@dimen/d2"
        android:layout_marginBottom="@dimen/d2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp">

            <ImageView
                android:id="@+id/category_icon_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_grey_circle" />

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="@dimen/d6"
                android:layout_height="@dimen/d6"
                android:layout_gravity="center"
                android:src="@drawable/ic_person" />

        </FrameLayout>

        <TextView
            android:id="@+id/category_name"
            style="@style/Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d4"
            android:layout_weight="1"
            tools:text="Cyklistika" />

        <ImageView
            android:id="@+id/category_check"
            android:layout_width="@dimen/d6"
            android:layout_height="@dimen/d6"
            android:layout_marginEnd="@dimen/d2"
            android:src="@drawable/ic_check"
            android:tint="@color/red"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>