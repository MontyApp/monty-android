<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/AppBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/profile_collapsing_toolbar"
            style="@style/CollapsingToolbar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profile_toolbar"
                style="@style/Toolbar"
                android:titleTextAppearance="@style/ToolbarTitle"
                app:title="@string/profile_title" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/state_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/profile_sign_in"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/d4"
                    android:gravity="center"
                    android:text="@string/profile_sign_in_info"
                    style="@style/Subtitle"/>

                <com.monty.ui.base.SubmitButton
                    android:id="@+id/profile_sign_in_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d4"
                    android:layout_marginTop="@dimen/d4"
                    android:layout_marginEnd="@dimen/d4"
                    android:layout_marginBottom="@dimen/d4"
                    app:sffr_label_idle="@string/profile_sign_in" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="gone">

                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d4"
                    android:src="@drawable/bg_person"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/profile_first_name"
                        style="@style/TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d4"
                        android:layout_marginTop="@dimen/d4"
                        android:layout_marginEnd="@dimen/d2"
                        android:layout_weight="1"
                        android:hint="@string/profile_first_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/create_advert_images">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_first_nameEditText"
                            style="@style/TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/profile_lat_name"
                        style="@style/TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d2"
                        android:layout_marginTop="@dimen/d4"
                        android:layout_marginEnd="@dimen/d4"
                        android:layout_weight="1"
                        android:hint="@string/profile_last_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/create_advert_images">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profile_last_nameEditText"
                            style="@style/TextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_email"
                    style="@style/TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d4"
                    android:layout_marginEnd="@dimen/d4"
                    android:hint="@string/profile_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/create_advert_images">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_email_editText"
                        style="@style/TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_phone"
                    style="@style/TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d4"
                    android:layout_marginEnd="@dimen/d4"
                    android:hint="@string/profile_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/create_advert_images">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_phone_editText"
                        style="@style/TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.monty.ui.base.SubmitButton
                    android:id="@+id/profile_save_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d4"
                    android:layout_marginEnd="@dimen/d4"
                    android:layout_marginBottom="@dimen/d4"
                    app:sffr_label_disabled="@string/profile_save"
                    app:sffr_label_idle="@string/profile_save"
                    app:sffr_label_success="@string/profile_save_success" />

            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
