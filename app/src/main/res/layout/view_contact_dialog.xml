<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d4"
        android:layout_marginTop="@dimen/d4"
        android:layout_marginEnd="@dimen/d4"
        android:background="@drawable/bg_selected"
        android:textAppearance="@style/TitleDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hana Nováková" />

    <LinearLayout
        android:id="@+id/contact_phone_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d4"
        android:background="@drawable/bg_selected"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contact_name_phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/d4"
            android:src="@drawable/ic_phone" />

        <TextView
            android:id="@+id/contact_name_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d4"
            android:text="@string/contact_dialog_phone"
            android:textAppearance="@style/TextRegular.Blueish.16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_email_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selected"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contact_email_phone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/d4"
            android:src="@drawable/ic_mail" />

        <TextView
            android:id="@+id/contact_email_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d4"
            android:text="@string/contact_dialog_email"
            android:textAppearance="@style/TextRegular.Blueish.16" />

    </LinearLayout>
</LinearLayout>